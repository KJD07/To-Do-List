<%- include("header") -%>
<div class="box" id="heading">
  <h1><%=kday%></h1>
</div>
<div class="box">
  <%  for(var i=0; i<itemlist.length ;i++){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=itemlist[i]._id%>" onChange="this.form.submit()">
      <p><%=itemlist[i].name%></p>
    </div>
    <input type="hidden" name="newName" value="<%=kday%>"></input>
  </form>
  <% } %>

  <form class="item" action="/" method="post">
    <input class="hw" type="text" name="task" placeholder="Add task" autocomplete="off">
    <button type="submit" name="button" value=<%=kday%>>+</button>
  </form>
</div>

<%- include("footer") -%>
